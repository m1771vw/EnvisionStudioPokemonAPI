@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="stylesheet" href="~/EnvisionStudioPokemonAPI.styles.css" asp-append-version="true" />
</head>
<div class="text-center">
    <h1 class="display-4">Welcome, @User.Identity.Name</h1>
    
    <div class="card-container">
        @foreach (var pokemon in Model.PokemonResults)
        {
            <div class="card">
                <a href="/details/@pokemon.name">
                    <div class="card-body">
                        <h5 class="card-title">@pokemon.name</h5>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="pagination">
        @if (Model.TotalPages > 1)
        {
            @if (Model.CurrentPage > 1)
            {
                <a href="?page=1">First</a>
                <a href="?page=@(Model.CurrentPage - 1)">Previous</a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span>@i</span>
                }
                else
                {
                    <a href="?page=@i">@i</a>
                }
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="?page=@(Model.CurrentPage + 1)">Next</a>
                <a href="?page=@Model.TotalPages">Last</a>
            }
        }
    </div>



</div>

